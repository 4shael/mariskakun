---
import "../styles/global.css";
import site from "../data/site.json";

const { title = site.title, description = site.tagline, image } = Astro.props;

const canonical = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : null;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {canonical ? <link rel="canonical" href={canonical} /> : null}

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonical ? <meta property="og:url" content={canonical} /> : null}
    {image ? <meta property="og:image" content={image} /> : null}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image ? <meta name="twitter:image" content={image} /> : null}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Space+Grotesk:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <header class="nav">
      <div class="nav-inner container">
        <a class="nav-title" href="/">{site.title}</a>
        <nav class="nav-links">
          {site.nav.map((item) => (
            <a href={item.href}>{item.label}</a>
          ))}
        </nav>
      </div>
    </header>

    <main class="page">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="footer">
      <div class="container footer-grid">
        <div>
          <strong>{site.title}</strong>
          <p>{site.tagline}</p>
          <p>{site.location}</p>
        </div>
        <div>
          <strong>Contact</strong>
          <p><a class="muted-link" href={`mailto:${site.email}`}>{site.email}</a></p>
        </div>
        <div>
          <strong>Follow</strong>
          <p><a class="muted-link" href={site.instagram}>Instagram</a></p>
          <p><a class="muted-link" href={site.facebook}>Facebook</a></p>
        </div>
      </div>
    </footer>
  </body>
</html>
